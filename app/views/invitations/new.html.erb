<h2>New invitation</h2>

<% form_for(@invitation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => "invitation-pick" %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message, :class => "large" %>
  </p>
  <p>
    <%= f.submit 'Send!' %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>