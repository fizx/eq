<div class="yui-g"> 
	<div class="yui-u first"> 

		<h2>Log In </h2>
		<div class="space"></div>

		<% form_tag session_path do -%>
		<p><%= label_tag 'Email address' %><br />
		<%= text_field_tag 'email', @email %></p>

		<p><%= label_tag 'password' %><br/>
		<%= password_field_tag 'password', nil %> <%= submit_tag 'Log in' %></p>
	

		<% end -%>
		<div class="space"></div>
		<h4>Or, login with Facebook:</h4>
		<fb:login-button onclick='facebook_button_onclick()'></fb:login-button>
	</div>
	<div class="yui-u" xmlns:fb="http://www.facebook.com/2008/fbml"> 
	  <% unless params[:fb_user] %>
			<div class="space"></div>
			<h3>Do you use Facebook?</h3>
			Use Facebook to register for <b>eq</b>
				<div class="space"></div>
			<fb:login-button onclick='facebook_button_onclick()'></fb:login-button>
	  <% end %>
	</div>
</div>