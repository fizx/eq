<h1>Listing trips</h1>

<table>
  <tr>
    <th>Start</th>
    <th>Finish</th>
    <th>Intervalable type</th>
    <th>Intervalable</th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%=h trip.start %></td>
    <td><%=h trip.finish %></td>
    <td><%=h trip.intervalable_type %></td>
    <td><%=h trip.intervalable_id %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New trip', new_trip_path %>