<html>
	<head>
		<%=stylesheet_link_tag "reset-fonts-grids" %>
		<%=stylesheet_link_tag "jquery-ui-1.7.2.custom" %>
		<%=stylesheet_link_tag "site" %>
		<%=stylesheet_link_tag "facebox" %>
		<%=stylesheet_link_tag "jquery.autocomplete" %>
		<%=stylesheet_link_tag "jquery.treeview" %>
		<%=stylesheet_link_tag "fullcalendar" %>
		
		<%=javascript_include_tag "jquery-1.3.2.min" %>
		<%=javascript_include_tag "jquery-ui-1.7.2.custom.min" %>
		<%=javascript_include_tag "jrails" %>
		<%=javascript_include_tag "ui.draggable" %>
		<%=javascript_include_tag "jquery.autocomplete.pack" %>
		<%=javascript_include_tag "jquery.treeview.pack" %>
		<%=javascript_include_tag "fullcalendar.min" %>
		<%=javascript_include_tag "facebox" %>
		<%=javascript_include_tag "application" %>
	</head>
	<body>
		<div id="doc4"> 
			<div id="hd">
				<div>						
					<% if logged_in? %>
						<div id="welcome">
							Welcome, <%=link_to current_user.login, edit_user_url(current_user)%>  <%=link_to "Log out", logout_url %>
						</div>
					<% end %>
					<a href="/" id="logo">eq</a>
					<ul id="tabs">
						<li><%=link_to_unless_current "Activities", "/" %></li>
						<li><%=link_to_unless_current "Events", events_url %></li>
						<li><%=link_to_unless_current "Friends", friends_url %></li>
						<li><%=link_to_unless_current "Calendar", calendars_url %></li>
					</ul>
				<% if flash[:notice] || flash[:unescaped_notice] %>
					<div class="highlight" style="clear:both"><%=flash[:unescaped_notice]%><%=h flash[:notice]%></div>
				<% end %>
				<% if flash[:error] || flash[:unescaped_error] %>
					<div class="highlight error" style="clear:both"><%=flash[:unescaped_error]%><%=h flash[:error]%></div>
				<% end %>
				</div>  
			</div>
		  <div id="bd"><%=yield%></div>  
		  <div id="ft">
				<div>
					Copyright &copy;2009 Kyle Maxwell
				</div>  
			</div>
		</div>
	</body>
</html>