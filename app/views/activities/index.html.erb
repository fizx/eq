<div class="yui-gc"> 
	<div class="yui-u first"> 
		<% if @mass.blank? && @stream.blank?%>
			<%= render :partial => 'blank' %>
		<% else %>
			<h3><%=link_to "What would you like to do?", "#suggest" %></h3>
			<div class="tgt ideas" id="suggest">
				<h2>I want to...</h2>
				<%= render :partial => 'root', :activities => @activities %>
			</div>
			<div class="space"></div> 
		<% end %>
		<% unless @mass.blank? %>
			<h3>Critical mass</h3>
			<ul class="rows">
				<li><%=link_to_organize%> <%=link_to "Jeff" %> <span class="plus">+6</span> wants to see Up this weekend </li>
				<li><%=link_to_organize%> <%=link_to "Suzy" %> <span class="plus">+2</span> wants to go hiking this summer</li>
			</ul>
			<div class="space"></div>
		<% end %>
		<% unless @stream.blank? %>
			<h3>The stream</h3>
			<ul class="rows"><%=render @stream%></ul>
			<%=show_hidden_link %>
			<%=will_paginate @stream %>
		<% end %>
  </div> 
	<div class="yui-u"> 
		<h3>Random idea</h3>
		<p>Do you want to <%=@activity.name %>?</p>
		<%=link_to "never", new_never_path(:never => {:activity_id => @activity.id}), :class=> "right" %>
		<%=link_to "yes", new_activity_time_span_path(@activity) %> 
		<%=link_to "no", "/" %>
		<div class="space"></div>
		
		<%= render :partial => 'calendar_column' %>
	</div>
</div>