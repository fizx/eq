<div class="yui-gc"> 
	<div class="yui-u first"> 
		<% if @mass.blank? && @stream.blank?%>
			<div>
				Thanks for joining <b>eq</b>, the first social network that plans events and activites for you and your friends. To get the most out of <b>eq</b>, start with the steps below:
			</div>

			<div id="ideas">
				<h2>Get started...</h2>
				<ul>
					<li><%=link_to "Invite your friends!", new_invitation_url %></li>
					<li><%=link_to "Find your friends!", :controller => "friends", :action => "find"%></li>
					<li><%=link_to "Update your availability!", calendars_url%></li>
					<li><%=link_to "Add an activity!", new_activity_url %></li>
				</ul>
			</div>
		<% else %>
			<h3><%=link_to "What would you like to do?", "#suggest" %></h3>
			<div class="tgt ideas" id="suggest">
				<h2>I want to...</h2>
				<%= render :partial => 'root', :activities => @activities %>
			</div>
			<div class="space"></div> 
		<% end %>
		<% unless @mass.blank? %>
			<h3>Critical mass</h3>
			<ul class="rows">
				<li><%=link_to_organize%> <%=link_to "Jeff" %> <span class="plus">+6</span> wants to see Up this weekend </li>
				<li><%=link_to_organize%> <%=link_to "Suzy" %> <span class="plus">+2</span> wants to go hiking this summer</li>
			</ul>
			<div class="space"></div>
		<% end %>
		<% unless @stream.blank? %>
			<h3>The stream</h3>
			<ul class="rows"><%=render @stream%></ul>
		<% end %>
  </div> 
	<div class="yui-u"> 
		<h3>Random idea</h3>
		<p>Do you want to <%=@interest.description%>?</p>
		<%=link_to "yes", @interest.url_hash %> 
		<%=link_to "no", @interest.url_hash.merge(:negative => true) %>
		<div class="space"></div>
		
		<%=render "/calendars/calendar", :events => @events %>
		Add: 
		<%=link_to "event", new_event_url %> -
		<%=link_to "web calendar", "/calendars#cal" %> -
		<%=link_to "busy period", "/calendars#busy" %> -
		<%=link_to "trip", "/calendars#trip" %>
		<div class="space"></div>
		<% unless @upcoming.blank? %>
			<h3>Upcoming</h3>
			<ul class="rows">
				<li><b>7/27</b> Going with <%=link_to "6 people" %> to see Up</li>
				<li><b>7/29</b> Going with <%=link_to "Suzy" %> to go hiking</li>
			</ul>
		<% end %>
	</div>
</div>