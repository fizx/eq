<div class="yui-gc"> 
	<div class="yui-u first"> 
		<h2><%=desire(@interest)%> </h2>
		<h4><%=@interest.description%></h4>
		<div class="space"></div>
		<h4 class="highlight">Your friends are already interested in <%=@friends.total_entries %> things that share this description</h4>
		<ul class="rows"><%=render @friends%></ul>
		<%=will_paginate @friends%>
	</div>
	<div class="yui-u">
		<h3>Interested and available friends</h3>
		<div class="space"></div>
		<%=render "/calendars/calendar", :events => @availabilities %>
		<div class="space"></div>
		<h4>Click one of the days above to create an invitation.</h4>
	</div>
</div>