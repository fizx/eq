<div class="right">
	<%=event_link %>
</div>

<div id="ideas">
	<h4>You want to <%=@activity.name%> <%=@time_span.name%> <%=@proximity.name %></h4>
	<h2>With? </h2>	
	<ul>
		<% @group_sizes.each do |size| %>
			<li><%=link_to size.name, new_activity_time_span_proximity_group_size_familiarity_url(@activity, @time_span, @proximity, size) %></li>
		<% end %>
		<li>
			<form action="<%=request.request_uri.gsub('/new', '') %>" method="POST">
				<%=text_field_tag "group_size[min]", "2", :size => 4 %> to <%=text_field_tag "group_size[max]", "2", :size => 4 %> people
				<input type="submit" value="Choose">
			</form>
		</li>
	</ul>
</div>
